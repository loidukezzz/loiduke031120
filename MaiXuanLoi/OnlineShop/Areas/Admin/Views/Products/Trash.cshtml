@model IEnumerable<MyLibrary.Model.Product>

@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thùng rác sản phẩm</h2>

<p>
    <button type="button" class="btn btn-outline-danger mb-3"><i class="fas fa-angle-left"></i>@Html.ActionLink("Trở lại danh sách", "Index")</button>
</p>
<table class="table table-bordered">
    <tr>
        <th scope="col">
            #
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.PriceSale)
        </th>
        @*<th scope="col">
            @Html.DisplayNameFor(model => model.Metakey)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Metadesc)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Created_at)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Created_by)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Updated_at)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Updated_by)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Status)
        </th>*@
        <th scope="col"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <input type="checkbox" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            <img style="max-width:30%; max-height:30%;" src="~/@Html.DisplayFor(modelItem => item.Img)" />
        </td>
        <td>
            @Html.Raw(item.Detail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceSale)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Metakey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Metadesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created_at)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created_by)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Updated_at)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Updated_by)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>*@
        <td>
            <div class="action_btns d-flex">
                <a href="@Url.Action("Retrash", "Products", new { id = item.Id })" class="action_btn mr_10"> <i class="fas fa-trash-restore"></i>__</a>
                <a href="@Url.Action("Delete", "Products", new { id = item.Id })" class="action_btn ml-10"><i class="far fa-trash-alt"></i>_</a>
            </div>
        </td>
    </tr>
}

</table>
