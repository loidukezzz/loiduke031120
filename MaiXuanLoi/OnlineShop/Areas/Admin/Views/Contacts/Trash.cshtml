@model IEnumerable<MyLibrary.Model.Contact>

@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thùng rác liên hệ</h2>

<p>
    <button type="button" class="btn btn-outline-danger mb-3"><i class="fas fa-angle-left"></i>@Html.ActionLink("Trở lại danh sách", "Index")</button>
</p>
<table class="table table-bordered">
    <tr>
        <th scope="col">
            #
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Created_at)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Created_by)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Updated_at)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Updated_by)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th scope="col"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_at)
            </td>
            <td>
                @Html.DisplayFor(model => item.Created_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a href="@Url.Action("Retrash", "Contacts", new { id = item.Id })" class="action_btn mr_10"> <i class="fas fa-trash-restore"></i>__</a>
                <a href="@Url.Action("Delete", "Contacts", new { id = item.Id })" class="action_btn ml-10"><i class="far fa-trash-alt"></i>_</a>
            </td>
        </tr>
    }

</table>
