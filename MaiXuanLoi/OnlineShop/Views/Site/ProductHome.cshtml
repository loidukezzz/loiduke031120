
@model IEnumerable<MyLibrary.Model.Product>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <li class="col-6 col-lg-3 col-md-4">
            <a href="~/chi-tiet-san-pham/@item.Slug" class="item">
                <div class="card-body">
                    <h6 class="title">@item.Name</h6>
                    <img class="img-sm float-right" src="~/@item.Img">
                    @*<p class="text-muted"><i class="fa fa-map-marker-alt"></i>@Html.Raw(item.Detail)</p>*@
                </div>
            </a>
        </li>
    }
}
